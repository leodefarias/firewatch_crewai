# Arquivo de exemplo para variáveis de ambiente
# Copie este arquivo para .env e configure as variáveis

# =================================
# CONFIGURAÇÕES DO TWILIO
# =================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=+14155238886

# =================================
# CONFIGURAÇÕES DE IA (OPENAI/CREWAI)
# =================================
OPENAI_API_KEY=your_openai_api_key

# =================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =================================
# Para produção com MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=firewatch
DB_USER=firewatch_user
DB_PASSWORD=firewatch_pass

# Para desenvolvimento com H2
# (comentar as linhas acima e descomentar abaixo)
# DB_URL=jdbc:h2:mem:firewatch
# DB_USER=sa
# DB_PASSWORD=password

# =================================
# CONFIGURAÇÕES DA APLICAÇÃO
# =================================
APP_PORT=8080
APP_PROFILE=production

# Frontend
REACT_APP_API_URL=http://localhost:8080/api

# =================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =================================
GRAFANA_ADMIN_PASSWORD=firewatch123
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# =================================
# CONFIGURAÇÕES DE SEGURANÇA
# =================================
JWT_SECRET=your_jwt_secret_key_here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# =================================
# CONFIGURAÇÕES DE LOGS
# =================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/firewatch.log

# =================================
# CONFIGURAÇÕES DE CACHE (REDIS)
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=firewatch123

# =================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=firewatch@yourcompany.com

# =================================
# CONFIGURAÇÕES DE INTEGRAÇÃO
# =================================
# Webhook URLs para integração com outros sistemas
WEBHOOK_URL_INCIDENT_CREATED=https://your-webhook-url.com/incident-created
WEBHOOK_URL_INCIDENT_RESOLVED=https://your-webhook-url.com/incident-resolved

# =================================
# CONFIGURAÇÕES DE PERFORMANCE
# =================================
THREAD_POOL_SIZE=10
CONNECTION_POOL_SIZE=20
CACHE_TTL_SECONDS=300